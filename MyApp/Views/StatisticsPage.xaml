<!-- StatisticsPage.xaml -->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.Views.StatisticsPage">

    <ContentPage.Content>
        <Grid>
            <!-- Background Image -->
            <Image Source="background_income.jpg" Aspect="AspectFill" Opacity="0.8" />
            <StackLayout Padding="15">

                <!-- Display Total Expenses, Incomes, and Summary -->
                <Label x:Name="Label1" FontSize="25" Text="{Binding TotalExpenses, StringFormat='Total Expenses: {0:C}'}" />
                <Label FontSize="25" Text="{Binding TotalIncomes, StringFormat='Total Incomes: {0:C}'}" />
                <Label FontSize="25" Text="{Binding Summary, StringFormat='Summary: {0:C}'}" />

            </StackLayout>
        </Grid>
    </ContentPage.Content>

</ContentPage>
